.dash-menu {
  list-style: none;
  text-align: right;
  margin-right: @padding-large;
  font-size: 2em;
  .font-header;

  li {
    margin-bottom: 10px;  
  
    a {
      color: @color-light2; 
      &.active { color: @color-light1; }
      &:hover { color: @color-light1; }
    }
  }
}

.dash-page {
  overflow: auto;
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: @z-page;
  background-color: @color-light1;
}